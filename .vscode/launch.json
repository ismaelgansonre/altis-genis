{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ğŸš€ Lancer tout (Laravel + React + Queue + Logs)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "composer",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "serverReadyAction": {
                "pattern": "started on (https?://[^\\s]+)",
                "uriFormat": "http://localhost:8000",
                "action": "openExternally"
            }
        },
        {
            "name": "ğŸŒ Serveur Laravel uniquement",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "php",
            "runtimeArgs": [
                "artisan",
                "serve"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "serverReadyAction": {
                "pattern": "started on (https?://[^\\s]+)",
                "uriFormat": "http://localhost:8000",
                "action": "openExternally"
            }
        },
        {
            "name": "âš¡ Vite Dev Server uniquement",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "ğŸ“¨ Queue Worker",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "php",
            "runtimeArgs": [
                "artisan",
                "queue:listen",
                "--tries=1"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "ğŸ“‹ Logs (Pail)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "php",
            "runtimeArgs": [
                "artisan",
                "pail",
                "--timeout=0"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "ğŸ› Debug PHP (XDebug)",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "pathMappings": {
                "/var/www/html": "${workspaceFolder}"
            },
            "log": true
        }
    ],
    "compounds": [
        {
            "name": "ğŸ¯ DÃ©veloppement complet (Manuel)",
            "configurations": [
                "ğŸŒ Serveur Laravel uniquement",
                "âš¡ Vite Dev Server uniquement",
                "ğŸ“¨ Queue Worker",
                "ğŸ“‹ Logs (Pail)"
            ],
            "presentation": {
                "hidden": false,
                "group": "development",
                "order": 1
            },
            "stopAll": true
        }
    ]
}